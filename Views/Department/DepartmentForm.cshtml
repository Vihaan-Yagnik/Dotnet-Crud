@{
    ViewData["Title"] = "Department Form";
}
@model DepartmentModel;

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Department Form</h5>

        <!-- Multi Columns Form -->
        <form method="post" asp-controller="Department" asp-action="SaveDepartment" class="row g-3">
            <div class="col-md-12">
                <label asp-for="DepartmentName" for="inputEmail5" class="form-label">Department Name</label>
                <input asp-for="DepartmentName" type="text" placeholder="Enter Department Name" class="form-control" id="inputEmail5">
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="DepartmentId" />
                <button type="submit" class="btn btn-primary">Submit</button>
                @* <button type="reset" class="btn btn-secondary">Reset</button> *@
            </div>
        </form><!-- End Multi Columns Form -->

    </div>
</div>