@{
    ViewData["Title"] = "Project Form";
}
@model Admin3.Models.ProjectModel;

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Project Form</h5>

        <!-- Multi Columns Form -->
        <form asp-controller="Project" asp-action="SaveProject" class="row g-3">
            <div class="col-md-12">
                <label asp-for="ProjectName" for="inputEmail5" class="form-label">Project Name</label>
                <input asp-for="ProjectName" type="text" placeholder="Enter Project Name" class="form-control" id="inputEmail5">
            </div>
            <div class="col-md-4">
                <label asp-for="Start_Date" for="inputCity" class="form-label">Start Date</label>
                <input asp-for="Start_Date" type="date" class="form-control" id="inputCity">
            </div>
            <div class="col-md-4">
                <label asp-for="End_Date" for="inputState" class="form-label">End Date</label>
                <input asp-for="End_Date" type="date" class="form-control" id="inputZip">
            </div>
            <div class="col-md-4">
                <label asp-for="Budget" for="inputState" class="form-label">Budget</label>
                <input asp-for="Budget" type="number" class="form-control" id="inputZip" placeholder="Enter Budget Of Project">
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="ProjectId"/>
                <button type="submit" class="btn btn-primary">Submit</button>
                @* <button type="reset" class="btn btn-secondary">Reset</button> *@
            </div>
        </form><!-- End Multi Columns Form -->

    </div>
</div>