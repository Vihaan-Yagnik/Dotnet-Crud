@{
    ViewData["Title"] = "User Form";
}
@model Admin3.Models.UserModel;

<div class="card">
    <div class="card-body">
        <h5 class="card-title">User Form</h5>

        <!-- Multi Columns Form -->
        <form method="post" asp-controller="User" asp-action="UserSave" class="row g-3">
            <div class="col-md-12">
                <label asp-for="UserName" for="inputEmail5" class="form-label">User Name</label>
                <input asp-for="UserName" type="text" placeholder="Enter User Name" class="form-control" id="inputEmail5">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Email" for="inputCity" class="form-label">Email</label>
                <input asp-for="Email" type="Email" class="form-control" placeholder="Email" id="inputCity">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Password" for="inputState" class="form-label">Password</label>
                <input asp-for="Password" type="text" class="form-control" id="inputZip">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="MobileNo" for="inputState" class="form-label">MobileNo</label>
                <input asp-for="MobileNo" type="number" class="form-control" id="inputZip" placeholder="Enter Mobile No.">
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Address" for="inputState" class="form-label">Address</label>
                <input asp-for="Address" type="text" class="form-control" id="inputZip" placeholder="Enter Address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="IsActive" for="inputState" class="form-label">IsActive</label>
                <input asp-for="IsActive" type="text" class="form-control" id="inputZip" >
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="UserID" />
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-primary">Reset</button>
                @* <button type="reset" class="btn btn-secondary">Reset</button> *@
            </div>
        </form><!-- End Multi Columns Form -->
        <form method="post" asp-action="Cancel" asp-controller="User">
            <button type="submit" class="btn btn-primary">Cancel</button>
        </form>
    </div>
</div>